<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.rupehra.buzzer.FourPlayerActivity"
    android:weightSum="1">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/player14"

        android:onClick="onClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/player24"
        android:layout_alignParentTop="true"
        android:layout_weight="0.34"
        android:background="#a9f3ff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:text="PLAYER 2"
        android:id="@+id/player24"
        android:onClick="onClick"
        android:layout_above="@+id/textView5"
        android:layout_weight="0.38"
        android:background="#ffbab8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="player 3"
        android:id="@+id/player34"
        android:onClick="onClick"
        android:layout_above="@+id/player44"
        android:layout_alignTop="@+id/textView5"
        android:layout_weight="0.38"
        android:background="#90ffc6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:text="player 4"
        android:id="@+id/player44"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:background="#81b3ff" />

</LinearLayout>
