<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.rupehra.buzzer.ThreePlayerActivity">

    <Button
        android:layout_width="match_parent"
        android:text="PLayer  1"
        android:layout_height="163dp"
        android:id="@+id/player13"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffa0e4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="player 2"
        android:id="@+id/player23"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:layout_above="@+id/player33"
        android:layout_below="@+id/player13"
        android:background="#b8fff5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="player 3"
        android:id="@+id/player33"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#feff94" />

</LinearLayout>
